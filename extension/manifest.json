{
  "manifest_version": 3,
  "name": "Job Side - 网页操作助手",
  "version": "1.0.0",
  "description": "通过自然语言指令控制网页操作",
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": [
    "sidePanel",
    "storage",
    "scripting",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "打开侧边栏"
  }
}

